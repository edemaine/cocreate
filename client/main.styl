:root
  --palette-size: 32px
  // The following grow to accomodate scrollbars if needed:
  --palette-color: #ccc
  --palette-border: 2px #ccc
  --tooltip-color: hsl(60, 50%, 76%)
  --tooltip-width: 200px
  --tooltip-arrow: 5px
  --dragzone-color: hsla(60, 50%, 76%, 50%)

.dark
  --palette-color: #333
  --palette-border: 2px #666
  --tooltip-color: hsl(60, 50%, 25%)

// A few basics from Bootstrap:
*, ::before, ::after
  box-sizing: border-box
svg
  overflow: hidden
input, textarea
  width: 100%
.sr-only
  position: absolute
  width: 1px
  height: 1px
  padding: 0
  margin: -1px
  overflow: hidden
  clip: rect(0, 0, 0, 0)
  white-space: nowrap
  border: 0

kbd
  padding: 2px 4px
  font-family: 'Roboto Mono', monospace
  font-size: 90%
  color: #fff
  background-color: #333
  /.dark &
    color: #333
    background-color: #ddd
  border-radius: 3px
  box-shadow: inset 0 -1px 0 rgba(0,0,0,.25)
  display: inline-block // prevent line breaks in CTRL-something

body
  font-family: 'Roboto Slab', serif
  touch-action: none  // Prevent mobile zooming
  background: #fff
  &.dark
    color: #aaa
    background: #000
input, textarea
  font-family: 'Roboto Slab', serif
  font-size: 16px
  padding-top: 0px
  /.dark &
    color: #aaa
    &::placeholder
      color: #555
    background: #000
  &.pending
    background-color: hsl(0, 0%, 75%)
    /.dark &
      background-color: hsl(0, 0%, 15%)
  &.error
    background-color: hsl(354, 62%, 75%)
    /.dark &
      background-color: hsl(354, 62%, 15%)
  &.success
    background-color: hsl(134, 62%, 75%)
    /.dark &
      background-color: hsl(134, 62%, 15%)

html, body, #react-root, #container
  width: 100%
  height: 100%
  margin: 0
#container
  display: grid
  grid-template-areas: "left top" \
                       "left center" \
                       "left bottom"
  grid-template-columns: auto 1fr
  grid-template-rows: auto 1fr auto
#tools
  grid-area: left
#pages
  grid-area: top
#bottom
  grid-area: bottom
#center
  grid-area: center
  position: relative

.board, .modal, .overlay
  position: absolute
  overflow: hidden
  width: 100%
  height: 100%
  /.dark &
    filter: invert(1) hue-rotate(180deg)
.board
  cursor: crosshair
  touch-action: none  // PointerEvents only
  user-select: none  // avoid selecting text objects while drawing
.overlay
  pointer-events: none
.nopage
  .board, .overlay
    visibility: hidden !important
    // in particular, disable board's pointer events when no page
#dragzone
  transition: opacity 500ms
  background-color: var(--dragzone-color)
  opacity: 0
  &.drag
    opacity: 1

.palette
  background: var(--palette-color)
  display: flex
  z-index: 1
  user-select: none  // prevent selection e.g. of line thickness numbers
.vertical.palette
  flex-direction: column
  overflow-x: hidden
  overflow-y: auto
  top: 0
  left: 0
  height: 100%
.horizontal.palette
  flex-direction: row
  &.super
    flex-direction: column
  overflow-x: auto
  overflow-y: hidden
  width: 100%
.subpalette
  display: flex

#historyRange
  margin: 0 10px
  height: var(--palette-size)

#urlInput
  height: var(--palette-size)
#textInput
  height: 48px
  min-height: 48px
  resize: vertical
#name
  width: 8em

button(activeBorder)
  border: var(--palette-border) outset
  cursor: pointer
  &.selected, &.active
    --palette-border: activeBorder
    background: rgba(0,0,0,0.2)
    border: var(--palette-border) inset rgba(0,0,0,0.2)
    /.dark &
      border: var(--palette-border) inset rgba(0,0,0,0.75)
    &[data-color="black"]
      border: var(--palette-border) inset rgba(255,255,255,0.2)
      /.dark &
        border: var(--palette-border) inset rgba(255,255,255,0.3)
  &:active
    --palette-border: activeBorder
    background: rgba(0,0,0,0.4)
    border: var(--palette-border) inset rgba(0,0,0,0.4)
    /.dark &
      border: var(--palette-border) inset rgba(0,0,0,1)

.pageList
  display: flex
.page
  display: flex
  height: var(--palette-size)
  padding: 2px 0.3em
  border-radius: 25% 25% 0 0
  border-bottom: none !important
  button(2px)
  .icon
    display: inline-block
    margin-right: 2px
    svg
      height: 12px
.pageHeader
  text-align: center
  font-weight: bold

.tool, .attrib
  flex: none
  width: var(--palette-size)
  height: var(--palette-size)
  flex-basis: var(--palette-size)
  overflow: hidden
  position: relative
  button(3px)

.tool
  padding: 2px

.width, .fontSize
  display: flex
  justify-content: center
  align-items: center
  line
    stroke: var(--currentColor)
  text
    fill: black
    text-anchor: middle
    font-size: 10px
  /.dark & svg
    filter: invert(1) hue-rotate(180deg)

.color, [data-tool="fill"] svg
  width: 100%
  height: 100%
  /.dark &
    filter: invert(1) hue-rotate(180deg)

.custom.color
  input[type="color"], .set
    position: absolute
    width: calc(100% - 2 * 5px)
    height: calc(100% - 2 * 5px)
    margin: 5px
  input[type="color"]
    opacity: 0
    pointer-events: none
  .set
    background: linear-gradient(to bottom right, red,orange,yellow,green,blue,indigo,violet)

.tooltip
  cursor: help
  position: absolute
  display: block
  z-index: 99
  width: var(--tooltip-width)
  font-size: 16px
  /.dark &
    color: #ddd

  opacity: 0
  &.show
    opacity: 1
  &.fade
    transition: opacity .15s linear

  .tooltip-inner
    background: padding-box var(--tooltip-color)
    padding: 5px 8px

  // Arrow
  .arrow
    position: absolute
    width: var(--tooltip-arrow)
    height: var(--tooltip-arrow)
    border: var(--tooltip-arrow) solid transparent
    pointer-events: none
    &::before
      content: ''
  &[x-placement^="right"]
    padding-left: var(--tooltip-arrow)
    .arrow  // Left arrow
      left: calc(-1 * var(--tooltip-arrow))
      border-right-color: var(--tooltip-color)
  &[x-placement^="bottom"]
    padding-top: var(--tooltip-arrow)
    .arrow  // Left arrow
      top: calc(-1 * var(--tooltip-arrow))
      border-bottom-color: var(--tooltip-color)
  &[x-placement^="top"]
    padding-bottom: var(--tooltip-arrow)
    .arrow  // Left arrow
      bottom: calc(-1 * var(--tooltip-arrow))
      border-top-color: var(--tooltip-color)

  .hotkeys
    float: right
    .hotkey
      margin-top: 1px
      margin-left: 3px

.clear
  clear: both

.spacer
  flex-basis: 100%
  min-height: calc(var(--palette-size)/2)
  min-width: calc(var(--palette-size)/2)

svg
  .highlight
    opacity: 0.333
    pointer-events: none
  .selected
    opacity: 0.666
    pointer-events: none
  line.cursor
    opacity: 0.5
    stroke: black
    stroke-linecap: round
  .selected line.cursor
    visibility: hidden // don't highlight cursor in selection
  .selector
    fill: rgba(255,255,255,0.25)
    stroke: rgba(0,0,0,0.5)
    stroke-width: 3
    stroke-dasharray: 6
  .outline
    fill: none
    stroke: rgba(0,0,0,0.5)
    stroke-width: 2
    stroke-dasharray: 2
  tspan.code
    font-family: 'Roboto Mono', monospace
  tspan.emph
    font-style: oblique
  tspan.strong
    font-weight: bold
  tspan.strike
    text-decoration: line-through

body:not(.tool-history)
  .historyShow
    display: none
body.tool-history
  --palette-color: hsl(32,40%,73%)  // sepia-like
  &.dark
    --palette-color: hsl(32,40%,20%)
  .historyHide
    display: none

.loading
  position: fixed
  display: flex
  justify-content: center
  align-items: center
  top: 0
  left: 0
  width: 100%
  height: 100%
  > svg
    width: 10%
    height: 10%
    animation: fa-spin 2s ease infinite

// Modal dialogs
.modal
  padding: 20px 40px
  cursor: help
  color: black
  overflow: auto
.modal.error
  background: pink
.modal.info
  background: #bbb
.modal-title
  font-weight: bold
  font-size: larger

.close
  float: right
  width: 24px
  cursor: pointer
  &:hover
    color: #555
  &:active
    color: #888

.linkToRoom
  font-size: larger
.qrCode
  svg
    width: 100%
    max-height: 50vh
  /.dark &
    filter: invert(1) hue-rotate(180deg)

// Based on keyframes from Font Awesome Free (see `lib/icons.coffee`).
@keyframes fa-spin
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

#download
  display: none

.center
  text-align: center

.grid
  stroke-width: 0.96
  stroke: #c4e3f4
